{
  "name": "twig",
  "version": "1.0.0",
  "description": "Web-based harmonic series explorer",
  "main": "server.cjs",
  "type": "module",
  "scripts": {
    "build:css:start": "npx @tailwindcss/cli -i ./css/styles.css -o ./css/styles-compiled.css --watch",
    "build:css:prod": "npx @tailwindcss/cli -i ./css/styles.css -o ./css/styles-compiled.css --minify",
    "start": "node server.cjs",
    "dev": "npm-run-all --parallel css:watch js:watch node-server",
    "css:watch": "npx @tailwindcss/cli -i ./css/styles.css -o ./css/styles-compiled.css --watch",
    "js:watch": "esbuild js/app.js --bundle --outfile=dist/app.js --format=esm --watch",
    "build": "npm-run-all css:prod js:build",
    "css:prod": "npx @tailwindcss/cli -i ./css/styles.css -o ./css/styles-compiled.css --minify",
    "js:build": "node build.js",
    "node-server": "node server.cjs"
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "keywords": [
    "audio",
    "synthesizer",
    "spectral",
    "overtones",
    "webaudio"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "autoprefixer": "^10.4.22",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "npm-run-all": "^4.1.5",
    "p5": "^2.1.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17"
  }
}